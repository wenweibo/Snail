<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_item"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/lin_main"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/com_size_5">
        <ImageView
            android:id="@+id/iv_truck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/left_xiangji_1"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/rl_mask"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:gravity="center"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiangji_top_image"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/com_size_10">

        <ImageView
            android:id="@+id/iv_xing"
            android:layout_width="@dimen/img_size_10"
            android:layout_height="@dimen/img_size_10"
            android:layout_marginRight="@dimen/com_size_5"
            android:src="@mipmap/xing" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_base"
            android:text="车辆铭牌" />
    </LinearLayout>
</LinearLayout>
