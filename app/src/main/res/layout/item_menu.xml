<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/com_size_15"
    android:paddingBottom="@dimen/com_size_15">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/img_size2"
        android:layout_height="@dimen/img_size2"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_base"
        android:layout_marginTop="@dimen/com_size_5"
        android:text="东方" />
</LinearLayout>
