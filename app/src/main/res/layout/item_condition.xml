<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lin_condition"
  >
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/com_size_5"
        android:layout_marginLeft="@dimen/com_size_5"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_white_corners_50"
        >
        <TextView
            android:id="@+id/tv_title"
            style="@style/text_remark_12"
            android:layout_marginRight="@dimen/com_size_10"
            android:text="混泥土搅拌"
            android:textColor="@color/layout_title_color" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/title_search_delete" />
    </LinearLayout>

</LinearLayout>
